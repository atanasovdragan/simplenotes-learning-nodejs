<% layout('layouts/logged-out-layout') %>
<h1>Login</h1>
<!-- show error messages that come back with authentication -->
<% if (error.length > 0) { %>
<div class="alert alert-danger"><%= error %></div>
<% } %>
<!-- LOGIN FORM -->
<form action="/login" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password">
    </div>

    <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-lock"></span> Login</button>
</form>
<hr>
<p>Don't have an account? <a href="/signup">Signup</a></p>
<p>Or go on <a href="/">home page</a></p>