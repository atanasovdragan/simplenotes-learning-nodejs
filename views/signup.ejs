<% layout('layouts/logged-out-layout') %>
<h1>Signup</h1>
<!-- show error messages that come back with authentication -->
<% if (error.length > 0) { %>
<div class="alert alert-danger"><%= error %></div>
<% } %>

<% if (validation_errors.length > 0) { %>
    <% for (var i = 0; i < validation_errors.length; i++) { %>
        <div class="alert alert-danger"><%= validation_errors[i].msg %></div>
    <% } %>
<% } %>

<!-- SIGNUP FORM -->
<form action="/signup" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password">
    </div>
    <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-chevron-right"></span> Signup</button>
</form>
<hr>
<p>Have an account? <a href="/login">Login</a></p>
<p>Or go on <a href="/">home page</a></p>